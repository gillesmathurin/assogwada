<div>
	<!-- <h2 class="ficheid">Trouvez les associations par Ville ou Critères</h2> -->
</div>
<div id="col-form-recherche">
	<strong>Recherche par criteres</strong>	
	
	<% remote_form_for :rechercher, :url => recherches_path(), :before => "Element.show('spinner');", :complete => "Element.hide('spinner');" do |f| %>
		<table border="0" cellspacing="0" cellpadding="0" class="recherche">
			<tr>
				<td class="nomchamp">Qui ?</td>
				<td><%= f.text_field :keywords, :size => 30 %></td>
			</tr>
			<tr>
				<td class="nomchamp">Ou ?</td>
				<td><%= f.select(:ville, (Association::VILLE), :include_blank => true) %></td>
			</tr>
			<tr>
				<td class="nomchamp">Quoi ?</td>
				<td><%= f.select(:ci, (@ci_liste), :include_blank => true ) %></td>
			</tr>
			<tr>
				<td class="">&nbsp;</td><td> &nbsp; &nbsp; ou</td>
			</tr>
			<tr>
				<td class="nomchamp">Quoi d'autre ?</td>
				<td><%= f.select(:ci2, (@ci_liste), :include_blank => true ) %></td>
			</tr>
			<tr>
				<td class="nomchamp">Activites ?</td>
				<td><%= f.text_field(:activite, :size => 30) %></td>
			</tr>
			<tr>
				<td class="nomchamp">Manifestations ?</td>
				<td><%= f.text_field(:manifestation, :size => 30) %></td>
			</tr>
			<tr>
				<td colspan="2" align="right" class="bouton">
					<%= submit_tag "TROUVEZ" %>
				</td>
			</tr>
		</table>
	<% end %>

</div>

