<h1>New mailing</h1>

<%= error_messages_for :mailing %>

<% form_for(@mailing) do |f| %>
  <p>
    <b>Objet</b><br />
    <%= f.text_field :objet %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <b>Published at</b><br />
    <%= f.datetime_select :published_at %>
  </p>

  <p>
    <b>Numero</b><br />
    <%= f.text_field :numero %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', mailings_path %>
